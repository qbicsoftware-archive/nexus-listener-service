<Configuration status="INFO">
    <Appenders>
        <!-- this is a CLI tool, so we should log to console as-is -->
        <Console name="SysOut" target="SYSTEM_OUT">
            <PatternLayout pattern="%msg%n"/>
        </Console>
        <!-- show context information in the application log -->
        <RollingFile name="AppLog" fileName="${user.home}/.qbic-logs/nexus-listener.log" filePattern="${user.home}/.qbic-logs/nexus-listener.-%d{MM-dd-yyyy}.gz">
            <PatternLayout pattern="%d{dd.MM.yyyy HH:mm:ss} [%level] [%logger{1}] - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="SysOut" level="INFO"/>
            <AppenderRef ref="AppLog" level="ALL"/>
        </Root>
    </Loggers>
</Configuration>